<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.boyuan.official.mapper.ResumeFieldDefinitionMapper">
    
    <resultMap id="ResumeFieldDefinitionMap" type="club.boyuan.official.entity.ResumeFieldDefinition">
        <id column="field_id" property="fieldId"/>
        <result column="cycle_id" property="cycleId"/>
        <result column="field_key" property="fieldKey"/>
        <result column="field_label" property="fieldLabel"/>
        <result column="is_required" property="isRequired"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="is_active" property="isActive"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>
    
    <!-- 根据招聘年份ID查询字段定义列表 -->
    <select id="findByCycleId" resultMap="ResumeFieldDefinitionMap">
        SELECT * FROM resume_field_definition 
        WHERE cycle_id = #{cycleId} AND is_active = TRUE 
        ORDER BY sort_order
    </select>
    
    <!-- 根据字段ID查询字段定义 -->
    <select id="findById" resultMap="ResumeFieldDefinitionMap">
        SELECT * FROM resume_field_definition WHERE field_id = #{fieldId}
    </select>
    
    <!-- 插入字段定义 -->
    <insert id="insert" parameterType="club.boyuan.official.entity.ResumeFieldDefinition" useGeneratedKeys="true" keyProperty="fieldId">
        INSERT INTO resume_field_definition(cycle_id, field_key, field_label, is_required, sort_order, is_active)
        VALUES(#{cycleId}, #{fieldKey}, #{fieldLabel}, #{isRequired}, #{sortOrder}, #{isActive})
    </insert>
    
    <!-- 更新字段定义 -->
    <update id="update" parameterType="club.boyuan.official.entity.ResumeFieldDefinition">
        UPDATE resume_field_definition 
        SET field_key = #{fieldKey}, field_label = #{fieldLabel}, is_required = #{isRequired}, 
            sort_order = #{sortOrder}, is_active = #{isActive}, updated_at = NOW()
        WHERE field_id = #{fieldId}
    </update>
    
    <!-- 删除字段定义 -->
    <delete id="deleteById">
        DELETE FROM resume_field_definition WHERE field_id = #{fieldId}
    </delete>
    
</mapper>